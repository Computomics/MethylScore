/* -------------------------------------------------
 * Nextflow config file for CBE 
 * -------------------------------------------------
 */

singularity {
  enabled = true
  cacheDir = '/resources/containers'
}

process {
  executor = 'slurm'
  queue = { task.memory <= 170.GB ? 'c' : 'm' }
  clusterOptions = { task.time <= 8.h ? '--qos short': task.time <= 48.h ? '--qos medium' : '--qos long' }

  withName: MATRIX:BUILD {
  	cpus = 2
  	memory = { 4.GB * task.attempt }
  	time = { 12.h * task.attempt }
  }

  withName: BUILD_INDEX {
  	cpus = 4
  	memory = { 4.GB * task.attempt }
  	time = { 8.h * task.attempt }
  }

  withName: CONSENSUS:DEDUP {
  	cpus = 1
  	memory = { 16.GB * task.attempt }
  	time = { 2.h * task.attempt }
  }

  withName: STATISTICS {
  	cpus = 1
  	memory = {512.MB * task.attempt }
  	time = { 1.h * task.attempt }
  }

  withName: CONSENSUS:SPLIT {
  	cpus = 1
  	memory = { 1.GB * task.attempt }
  	time = { 1.h * task.attempt }
  }

  withName: SAMPLESHEET:GENERATE {
  	cpus = 1
  	memory = { 128.MB * task.attempt }
  	time = { 5.min * task.attempt }
  }

  withName: CALL_MRS {
  	cpus = 1
  	memory = { 16.GB * task.attempt }
  	time = { 8.h * task.attempt }
  }

  withName: IGV {
  	cpus = 1
  	memory = { 256.MB * task.attempt }
  	time = { 30.m * task.attempt }
  }

  withName: SPLIT_MRS {
  	cpus = 1
  	memory = { 16.GB * task.attempt }
  	time = { 8.h * task.attempt }
  }

  withName: CALL_DMRS {
  	cpus = 1
  	memory = { 512.MB * task.attempt }
  	time = { 2.h * task.attempt }
  }

  withName: MERGE_DMRS {
  	cpus = 1
  	memory = { 256.MB * task.attempt }
  	time = { 10.m * task.attempt }
  }

  errorStrategy = { ( task.exitStatus == 143 || task.exitStatus == 137 ) ? 'retry' : 'finish' }
  maxRetries = 3
  maxErrors = '-1'
}